            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="12dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_ebebeb"
                        android:scaleType="fitXY" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/cv_icon"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="游戏名称" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="游戏名称" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexbox_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_company"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    app:flexWrap="wrap" />


                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_blue_bg_line"
                    android:paddingLeft="13dp"
                    android:layout_alignBottom="@+id/tv_company"
                    android:paddingRight="13dp"
                    android:text="@string/dapp_start"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />


            </RelativeLayout>

